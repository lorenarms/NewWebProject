@page "/rooms"
@using FrontEnd.Services
@inherits RoomsBase


<h3>Rooms</h3>

@if (@LoadFailed)
{
    <div>
        <h4 class="text-border text-color fw-bold">@Message</h4>
    </div>
}


@if (Rooms == null)
{
    <h3>Loading...</h3>
}
else
{
    var roomCount = Rooms.Count();

    @if (roomCount > 0)
    {
        @foreach (var room in @Rooms)
        {
            <div class="card col-6 mb-3">
                <div class="card-body">
                    <h2>@room.Name</h2>
                    <p>@room.Description</p>
                </div>
            </div>
            
        }
    }
}

<style>
   
    .text-border {
        border: 2px solid red;
        /* border-radius: 5px; */
        background: red;
        padding: 10px 20px;
        display: inline-block;
        
    }
    .text-color {
        color: white;
    }

</style>


