@page "/rooms"
@inherits RoomsBase




@{
<h3>Rooms</h3>
    
var roomCount = Rooms.Count();

    if (roomCount > 0)
    {
        foreach (var room in @Rooms)
        {
            <div class="col-md-3 mb-2">
                <div class="card">
                    <div class="accordion-collapse">
                        <h2>@room.Name</h2>
                        <p>@room.Description</p>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h4>No rooms to show!</h4>
    }
    
    
}



